<odoo>
  <data>

    <record id="mrm_conductores.coche_form" model="ir.ui.view">
      <field name="name">mrm_conductores.coche.form</field>
      <field name="model">mrm_conductores.coche</field>
      <field name="arch" type="xml">
        <form string="Coche">
          <sheet>
            <group>
              <field name="name" />
              <field name="marca" />
              <field name="modelo" />
              <field name="asientos" />
              <field name="conductores_ids">
                <tree string="Conductor">
                  <field name="dni" />
                  <field name="name" />
                  <field name="edad" />
                  <field name="grupo" />
                </tree>
              </field>
              <field name="reparandose" />
              <field name="imagen" />
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="mrm_conductores.coche_tree" model="ir.ui.view">
      <field name="name">mrm_conductores.coche.tree</field>
      <field name="model">mrm_conductores.coche</field>
      <field name="arch" type="xml">
        <tree string="Coche">
          <field name="name" />
              <field name="marca" />
              <field name="modelo" />
              <field name="asientos" />
              <field name="reparandose" />
              <field name="imagen" />
        </tree>
      </field>
    </record>


  </data>
</odoo>
