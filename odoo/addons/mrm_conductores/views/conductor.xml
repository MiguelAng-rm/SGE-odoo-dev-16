<odoo>
    <data>
        <record id="mrm_conductores.conductor_form" model="ir.ui.view">
            <field name="name">mrm_conductores.conductor.form</field>
            <field name="model">mrm_conductores.conductor</field>
            <field name="arch" type="xml">
                <form string="Conductor">
                    <sheet>
                        <group>
                            <field name="dni" />
                            <field name="name" />
                            <field name="edad" />
                            <field name="grupo" />
                            <field name="salario" />
                            <field name="fecha_incorporacion" />
                            <field name="disponible" />
                            <field name="valoracion" />
                            <field name="horas_trabajadas" />
                            <field name="ganado_dia" />
                            <field name="coches_ids">
                                <tree string="Coche">
                                    <field name="name" />
                                    <field name="marca" />
                                    <field name="modelo" />
                                    <field name="reparandose" />
                                </tree>
                            </field>
                        </group>
                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="activity_ids" />
                        <field name="message_ids" />
                    </div>
                </form>
            </field>
        </record>
        
        <record id="mrm_conductores.conductor_tree" model="ir.ui.view">
            <field name="name">mrm_conductores.conductor.tree</field>
            <field name="model">mrm_conductores.conductor</field>
            <field name="arch" type="xml">
                <tree string="Conductor">
                    <field name="dni" />
                    <field name="name" />
                    <field name="edad" />
                    <field name="grupo" />
                    <field name="salario" />
                    <field name="fecha_incorporacion" />
                    <field name="disponible" />
                    <field name="valoracion" />
                    <field name="horas_trabajadas" />
                    <field name="ganado_dia" />
                </tree>
            </field>
        </record>
    
    </data>
</odoo>
